<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/benericon"
        android:layout_width="158dp"
        android:layout_height="158dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/modi_icon" />

    <EditText
        android:id="@+id/loginid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/benericon"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="아이디"
        android:inputType="text"
        android:textSize="20dp"
        android:padding="10dp"
        android:paddingLeft="30dp"
        />

    <EditText
        android:id="@+id/loginpasswd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginid"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/loginbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginpasswd"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="로그인"
        android:textSize="20dp"
        android:background="@color/fbutton_color_belize_hole"
        />

        <Button
            android:id="@+id/signbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loginbutton"
            android:padding="20dp"
            android:background="#00ff0000"
            android:text="회원가입"
            android:textColor="@color/fbutton_color_midnight_blue"
            android:textSize="15dp" />

</RelativeLayout>