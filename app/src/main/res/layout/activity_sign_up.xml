<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignUpActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        style="@style/LayoutMargin"
        android:text="아디디"
        android:textSize="20dp"
        />

    <EditText
        android:id="@+id/signupid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        style="@style/LayoutMargin"
        android:hint="6자 이상, 15자 이하의 아이디를 입력해주세요."
        android:inputType="text"
        android:textSize="15dp"
        android:padding="10dp"
        android:maxLines="1"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        style="@style/LayoutMargin"
        android:text="비밀번호"
        android:textSize="20dp"
        />

    <EditText
        android:id="@+id/signpassword1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        style="@style/LayoutMargin"
        android:hint="8자 이상, 하나 이상의 숫자 및 대소문자와\n 특수 문자모두를 포함한 비밀번호를 입력해주세요"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textSize="15dp"
        android:maxLines="1"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        style="@style/LayoutMargin"
        android:text="비밀번호 확인"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/signpassword2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        style="@style/LayoutMargin"
        android:hint="비밀번호와 동일하게 적어주세요.."
        android:inputType="textPassword"
        android:maxLines="1"
        android:padding="10dp"
        android:textSize="15dp" />

    <Button
        android:id="@+id/signupbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="회원가입"
        android:textSize="20dp"
        />


</LinearLayout>