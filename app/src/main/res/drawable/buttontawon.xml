<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners
                android:bottomRightRadius="17dp"
                android:bottomLeftRadius="17dp"
                android:topLeftRadius="17dp"
                android:topRightRadius="17dp"/>
            <stroke android:width="1dip" android:color="#4CD28F" />
            <gradient android:angle="-90" android:startColor="#4CD28F" android:endColor="#4CD28F"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners
                android:bottomRightRadius="17dp"
                android:bottomLeftRadius="17dp"
                android:topLeftRadius="17dp"
                android:topRightRadius="17dp"/>
            <stroke android:width="1dip" android:color="#4CD28F" />
            <solid android:color="#4CD28F"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners
                android:bottomRightRadius="17dp"
                android:bottomLeftRadius="17dp"
                android:topLeftRadius="17dp"
                android:topRightRadius="17dp"/>
            <stroke android:width="1dip" android:color="#4CD28F" />
            <gradient android:angle="-90" android:startColor="#4CD28F" android:endColor="#4CD28F" />
        </shape>
    </item>
</selector>